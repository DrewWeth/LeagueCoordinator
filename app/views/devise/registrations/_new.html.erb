<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div>
    <%= f.email_field :email, autofocus: true, :placeholder=>"Email", :class=>"form-control input-lg" %>
  </div>
  <br>

  <div>
    <%= f.text_field :f_name, :class=>"form-control input-lg", :placeholder=>"First Name" %>
  </div>
  <br>

  <div>
    <%= f.text_field :l_name, :class=>"form-control input-lg", :placeholder=>"Last Name" %>
  </div>
  <br>

  <div>
    <!-- <label>For Emergencies</label> -->
    <%= f.text_field :phone, :class=>"form-control input-lg", :placeholder=>"Phone Number" %>
  </div>
  <br>

  <div>
    <%= f.text_field :summoner_name, :class=>"form-control input-lg", :placeholder=>"Summoner Name" %>
  </div>
  <br>

  <div>
    <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"Password" %>
  </div>
  <br />

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"Password Confirmation" %>
  </div>
  <br />

  <div>
    <%= f.submit "Sign up", :class=>"btn btn-success input" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
