<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, autofocus: true, :placeholder=>"Jane.doe@gmail.com", :class=>"form-control input-lg" %></div>

  <div><br />
    <!-- <label>For Emergencies</label> -->
  <%= f.text_field :phone, :class=>"form-control input-lg", :placeholder=>"Phone Number" %>
  </div>

  <div><br>
  <%= f.text_field :summoner_name, :class=>"form-control input-lg", :placeholder=>"Summoner Name" %></div>

  <div><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"Password" %></div>

  <div><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"Password Confirmation" %></div>

  <div><br><%= f.submit "Sign up", :class=>"btn btn-primary input" %></div>
<% end %>

<%= render "devise/shared/links" %>
