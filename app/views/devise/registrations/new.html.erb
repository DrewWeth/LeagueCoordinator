<h2>Sign up</h2>
<div class="row">
  <div class="col-md-5">
    <div class="well">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.email_field :email, autofocus: true, :placeholder=>"Email", :class=>"form-control input-lg", :required=> true %></div>

      <div><br>
        <%= f.text_field :summoner_name, :class=>"form-control input-lg", :placeholder=>"Summoner Name" %></div>

        <div><br />
          <!-- <label>For Emergencies</label> -->
          <%= f.text_field :phone, :class=>"form-control input-lg", :placeholder=>"Phone Number" %>
        </div>

        <div style="margin-top:5px;"><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"Password", :required=>true %></div>

          <div><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"Password Confirmation", :required=>true %></div>

            <div><br><%= f.submit "Sign up", :class=>"btn btn-success input" %></div>
            <% end %>
          </div>
        </div>
      </div>
      <%= render "devise/shared/links" %>
